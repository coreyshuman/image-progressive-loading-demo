extends layout

block content
  h1= title

  div
    span
      img(src=fullImage)
    span
      img(src=medImage)


  div
    span Size: #{size} KB
    span Size: #{medImageSize} KB

  div
    input(type='checkbox' id='blurCheckbox')
    span Blur (or press B)
    span
      a(href='') Convert another file


  each config in configs
    div
      span(class='small')
        p= config.type
        p= config.size
      each format in config.formats
        span
          img(src=format.outputImage class='image')
          p #{format.outputSize} KB
          p(class='small')= format.string
        span.large
          textarea(readonly='readonly')=format.outputImage
